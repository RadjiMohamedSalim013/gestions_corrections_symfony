{% extends 'base.html.twig' %}

{% block title %}Détail du professeur{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="mb-4 text-primary fw-bold">Détail du professeur</h1>

    <div class="card shadow-sm border-0">
        <div class="card-body">
            <table class="table table-borderless mb-0">
                <tbody>
                    <tr>
                        <th scope="row" style="width: 140px;">ID</th>
                        <td>{{ professeur.id }}</td>
                    </tr>
                    <tr>
                        <th scope="row">Nom</th>
                        <td>{{ professeur.nom }}</td>
                    </tr>
                    <tr>
                        <th scope="row">Prénom</th>
                        <td>{{ professeur.prenom }}</td>
                    </tr>
                    <tr>
                        <th scope="row">Grade</th>
                        <td>{{ professeur.grade ?: '<span class="text-muted">Non renseigné</span>' | raw }}</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <div class="mt-4 d-flex gap-2">
        <a href="{{ path('app_professeur_index') }}" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-1"></i> Retour à la liste
        </a>

        <a href="{{ path('app_professeur_edit', {'id': professeur.id}) }}" class="btn btn-warning">
            <i class="fas fa-edit me-1"></i> Modifier
        </a>

        {{ include('professeur/_delete_form.html.twig') }}
    </div>
</div>
{% endblock %}
