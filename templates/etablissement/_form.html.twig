{{ form_start(form, {'attr': {'class': 'needs-validation'}, 'novalidate': 'novalidate'}) }}

    <div class="row g-3">
        {% for child in form %}
            <div class="col-12">
                {{ form_label(child, null, {'label_attr': {'class': 'form-label fw-bold'}}) }}

                {{ form_widget(child, {
                    'attr': {
                        'class': 'form-control' ~ (form_errors(child) ? ' is-invalid' : '')
                    }
                }) }}

                {{ form_errors(child) }}
            </div>
        {% endfor %}
    </div>

    <button type="submit" class="btn btn-primary mt-3">
        <i class="fas fa-save me-1"></i> {{ button_label|default('Enregistrer') }}
    </button>

{{ form_end(form) }}
