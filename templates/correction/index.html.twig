{% extends 'base.html.twig' %}

{% block title %}Liste des corrections{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1 class="mb-4 text-primary fw-bold">Liste des corrections</h1>

    <div class="mb-3 d-flex justify-content-between align-items-center">
        <a href="{{ path('app_correction_new') }}" class="btn btn-success">
            <i class="fas fa-plus"></i> Créer une nouvelle correction
        </a>
    </div>

    <table class="table table-hover table-striped align-middle">
        <thead class="table-light">
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Date</th>
                <th scope="col">NbrCopie</th>
                <th scope="col" style="width: 150px;">Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for correction in corrections %}
            <tr>
                <td>{{ correction.id }}</td>
                <td>{{ correction.date ? correction.date|date('Y-m-d') : '' }}</td>
                <td>{{ correction.nbrCopie }}</td>
                <td>
                    <a href="{{ path('app_correction_show', {'id': correction.id}) }}" class="btn btn-sm btn-outline-info me-1" title="Voir">
                        <i class="fas fa-eye"></i>
                    </a>
                    <a href="{{ path('app_correction_edit', {'id': correction.id}) }}" class="btn btn-sm btn-outline-warning" title="Modifier">
                        <i class="fas fa-edit"></i>
                    </a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4" class="text-center text-muted">Aucune correction trouvée</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
