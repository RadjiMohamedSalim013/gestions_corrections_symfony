{% extends 'base.html.twig' %}

{% block title %}Détail de la correction{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="mb-4 text-primary fw-bold">Détail de la correction</h1>

    <div class="card shadow-sm border-0">
        <div class="card-body">
            <table class="table table-borderless mb-0">
                <tbody>
                    <tr>
                        <th scope="row" style="width: 140px;">ID</th>
                        <td>{{ correction.id }}</td>
                    </tr>
                    <tr>
                        <th scope="row">Date</th>
                        <td>{{ correction.date ? correction.date|date('Y-m-d') : '<span class="text-muted">Non renseignée</span>' | raw }}</td>
                    </tr>
                    <tr>
                        <th scope="row">Nombre de copies</th>
                        <td>{{ correction.nbrCopie }}</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <div class="mt-4 d-flex gap-2">
        <a href="{{ path('app_correction_index') }}" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-1"></i> Retour à la liste
        </a>

        <a href="{{ path('app_correction_edit', {'id': correction.id}) }}" class="btn btn-warning">
            <i class="fas fa-edit me-1"></i> Modifier
        </a>

        {{ include('correction/_delete_form.html.twig') }}
    </div>
</div>
{% endblock %}
