{% extends 'base.html.twig' %}

{% block title %}Tableau de bord{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="mb-4 text-primary fw-bold">Tableau de bord</h1>
    
    <div class="row row-cols-1 row-cols-md-3 g-4">
        {% for entity in entities %}
            <div class="col">
                <a href="{{ path(entity.route) }}" class="text-decoration-none">
                    <div class="card h-100 shadow-sm border-0 rounded">
                        <div class="card-body text-center">
                            <i class="fas fa-{{ entity.icon }} fa-3x mb-3 text-primary"></i>
                            <h5 class="card-title fw-semibold">{{ entity.name }}</h5>
                            <p class="card-text text-muted">GÃ©rez les {{ entity.name|lower }}.</p>
                        </div>
                    </div>
                </a>
            </div>
        {% endfor %}
    </div>
</div>
{% endblock %}
