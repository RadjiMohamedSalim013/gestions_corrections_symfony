{% extends 'base.html.twig' %}

{% block title %}Liste des épreuves{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1 class="mb-4 text-primary fw-bold">Liste des épreuves</h1>

    <div class="mb-3 d-flex justify-content-between align-items-center">
        <a href="{{ path('app_epreuve_new') }}" class="btn btn-success">
            <i class="fas fa-plus"></i> Créer une nouvelle épreuve
        </a>
    </div>

    <table class="table table-hover table-striped align-middle">
        <thead class="table-light">
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Nom</th>
                <th scope="col">Type</th>
                <th scope="col" style="width: 150px;">Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for epreuve in epreuves %}
            <tr>
                <td>{{ epreuve.id }}</td>
                <td>{{ epreuve.nom }}</td>
                <td>{{ epreuve.type }}</td>
                <td>
                    <a href="{{ path('app_epreuve_show', {'id': epreuve.id}) }}" class="btn btn-sm btn-outline-info me-1" title="Voir">
                        <i class="fas fa-eye"></i>
                    </a>
                    <a href="{{ path('app_epreuve_edit', {'id': epreuve.id}) }}" class="btn btn-sm btn-outline-warning" title="Modifier">
                        <i class="fas fa-edit"></i>
                    </a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4" class="text-center text-muted">Aucune épreuve trouvée</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
